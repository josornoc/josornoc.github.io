<div class="col-md-12">
	<div class="col-md-7 col-md-offset-1">
		<div class="page-header">
		  <h2>Concerts Today <small> - <b><%=@todayDate%></b></small></h2>
		</div>
		<div class="list-group">
			<% @concertsToday.each do |concert| %>
			  <a href=<%="/concerts/" + concert.id.to_s %> class="list-group-item">
			    <h4 class="list-group-item-heading">Band: <b><%= concert.band %> - <%= concert.id %>(id)</b></h4>
			    <p class="list-group-item-text">Venue: <b><%= concert.venue %></b></p>
			    <p class="list-group-item-text">City: <b><%= concert.city %></b></p>
			    <p class="list-group-item-text">Price: <b><%= concert.price %></b></p>
			    <p class="list-group-item-text">Date: <b><%= concert.date %></b></p>
			    <p class="list-group-item-text">Description: <b><%= concert.description %></b></p>
			  </a>
			<% end %>
		</div>
	</div>
	<aside>
		<div class="col-md-3">
			<div class="page-header">
			  <h2>Later in <%= Date.today.strftime("%B") %></h2>
			</div>
			<div class="list-group">
				<% @concertsRestOfMonth.each do |concert| %>
					<a href="#" class="list-group-item">
				    <p><b><%= concert.band%></b></p>
				    <p><%= concert.date.strftime("%d/%m/%Y").to_s %></p>
				  </a>
				<% end %>
			</div>
		</div>
	</aside>
</div>






