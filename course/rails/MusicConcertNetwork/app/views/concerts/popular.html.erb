<div class="col-md-12">
	<div class="col-md-8 col-md-offset-2">
		<div class="page-header">
		  <h4>Most popular following concerts</h4>
		</div>
		<div class="list-group">
			<% @concerts.each do |concerts| %>
			  <a href="#" class="list-group-item">
			    <h4 class="list-group-item-heading">Band: <b><%= concerts.band %></b></h4>
			    <h4 class="list-group-item-heading">Number of comments: <b><%= concerts.comments.length %></b></h4>
			    <p class="list-group-item-text">Venue: <b><%= concerts.venue %></b></p>
			    <p class="list-group-item-text">City: <b><%= concerts.city %></b></p>
			    <p class="list-group-item-text">Price: <b><%= concerts.price %></b></p>
			    <p class="list-group-item-text">Date: <b><%= concerts.date %></b></p>
			    <p class="list-group-item-text">Description: <b><%= concerts.description %></b></p>
			  </a>
			<% end %>
		</div>
	</div>
</div>