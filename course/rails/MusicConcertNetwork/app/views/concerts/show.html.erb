<div class="col-md-10 col-md-offset-1">	
	<div class="jumbotron">
		<div class="container">
		  <h1><%= @concert.band %></h1>
		  <p>Location: <b><%= @concert.venue %></b></p>
		  <p>City: <b><%= @concert.city %></b></p>
		  <p>Date: <b><%= @concert.date.strftime("%A, %d - %B - %Y") %></b></p>
	  	<%= link_to "Buy Tickets", concerts_path, class: "btn btn-primary btn-lg" %>
	  	<%= link_to "Back", root_path, class: "btn btn-primary btn-lg" %>		  
		</div>
	</div>
	<div class="page-header">
	  <h2>Concert Comments</h2>
	</div>

	<!-- Panel create for each comment -->
	<% if @comments.empty? == false %>
		<% @comments.each do |comment| %>
			<div class="panel panel-default">
			  <div class="panel-heading">
			  	Comment by: <b><%= comment.name %></b>
			  	Posted in - <b><%= comment.created_at.strftime("%A, %d - %B - %Y  /  At: %H:%M") %></b>
			  </div>
			  <div class="panel-body"><%= comment.text %></div>
			</div>
		<% end %>
	<% end %>
	<!--  -->

	<div class="page-header">
	  <h2>Post new comment</h2>
	</div>
	<!-- Form to add a comment to the concert -->
	<%= form_for [@concert, @comment] do |comm|%>
	<%= comm.text_field :name %>
	<%= comm.text_area :text %>
	<%= comm.submit "Post" %>
	<%= link_to("Cancel", concert_comments_path(@concert)) %>
	<% end %>
	<!--  -->

</div>

