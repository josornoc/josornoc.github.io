<%= link_to("See all projects", projects_path()) %>
<%= link_to("Create new entry for project", new_project_entry_path(@project)) %>
<% if(flash[:notice]) %>
	<h5><%= flash[:notice] %></h5>
<% end%>
<h2>Project: <%=@project.name%></h2>
<%= image_tag @project.logo.url(:medium) %>
<hr>
<h2>Entries this month:</h2>
	<% @entriesThisMonth.each do |e| %>
		<h3>Entry:</h3>
		<h5><%= link_to("Edit Entry", edit_project_entry_path(@project, e)) %></h5>
		<h5>
			<%= link_to('Delete Entry', project_entry_path(@project, e), method: :delete, data: {confirm: 'Are you sure?'}) %>
		</h5>
		<ul>
			<li>comments: <%= e.comments %></li>
			<li>hours: <%= e.hours %></li>
			<li>minutes: <%= e.minutes %></li>
			<li>created_at: <%= e.created_at %></li>
			<li>updated_at: <%= e.updated_at %></li>
		</ul>
		<hr>
	<% end %>
<h2>Amount of hours worked:</h2>
<h3>Hours: <%=@hoursWorked%></h3>
<hr><hr>
<h2>All Entries for this project:</h2>
<% @entries.each do |e| %>
	<h3>Entry:</h3>
	<h5><%= link_to("Edit Entry", edit_project_entry_path(@project, e)) %></h5>
	<ul>
		<li>comments: <%= e.comments %></li>
		<li>hours: <%= e.hours %></li>
		<li>minutes: <%= e.minutes %></li>
		<li>created_at: <%= e.created_at %></li>
		<li>updated_at: <%= e.updated_at %></li>
	</ul>
	<hr>
<% end %>
