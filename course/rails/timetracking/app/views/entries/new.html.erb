<h1>New entry for project: </h1>
<h2>
	Project: <%=@project.name%> /// 
	Created At: <%=@project.created_at%> ///
	Id: <%=@project.id%>
</h2>
<%= form_for [@project, @entry] do |f|%>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	<br>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %>
	<br>
	<%= f.label :date %>
	<%= f.text_field :date %>
	<br>
	<%= f.label :comments %>
	<br>
	<%= f.text_area :comments %>
	<br>
	<%= f.submit "Save" %>
<% end %>

<% if @entry.errors.any? %>
	<ul>
		<% @entry.errors.full_messages.each do |err_message| %>
			<li><%= err_message %></li>
		<% end %>
	</ul>
<% end %>